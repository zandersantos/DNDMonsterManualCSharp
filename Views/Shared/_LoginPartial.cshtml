@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post" class="form-inline">
            <button type="submit" class="btn btn-link nav-item nav-link text-light">Log out</button>
        </form>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-item nav-link text-light">Log in</a>
    }
</div>